<Window x:Class="IOTDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOTDevice"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="IoT Device" Height="150" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="tbStateMessage"  FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="btnOnOff" Click="btnOnOff_Click" Content="Turn On" Padding="10 5" Margin="0 10 0 0" HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Window>
